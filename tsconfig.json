{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "src/*": ["./src/*"]
        },
        "target": "ES2018",
        "module": "CommonJS",
        "lib": ["ES2018", "ES2019", "ES2020"],
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts", "src/templates/**/*"]
}
